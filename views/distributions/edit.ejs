<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span>×</span></button>
                <h4 class="modal-title">配給編集</h4>
            </div>
            <div class="modal-body">
                <div class="panel-body">
                    <form class="form-horizontal">
                        <input type="hidden" class="form-control" name="id" id="id" placeholder="" maxlength=64>

                        <div class="form-group ">
                            <label for="codeValue" class="col-sm-3 control-label label-title">
                                配給コード
                            </label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" name="codeValue" id="codeValue" placeholder=""
                                    maxlength=64 readonly>
                            </div>
                        </div>

                        <div class="form-group ">
                            <label for="identifier" class="col-sm-3 control-label label-title">
                                名称
                            </label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" name="name" id="name" placeholder=""
                                    maxlength=64>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
                <button type="button" class="btn btn-primary update-button">配給を更新</button>
            </div>
        </div>
    </div>
</div>