<%- contentFor('title') %>
時間メータ
<%- contentFor('displayId') %>
Aa-13
<%- contentFor('styles') %>
<link href="/css/simplePagination.css" rel="stylesheet">
<%- contentFor('scripts') %>
<script src="/js/jquery.simplePagination.js"></script>
<script src="/js/master/commonMaster.js"></script>
<script src="/js/master/commonMasterList.js"></script>
<script src="/js/master/timeMeterList.js"></script>
<%- contentFor('body') %>
<div class="col-sm-12 form-container search">
    <form method="post" class="form-horizontal">
        <%- include('../common/master/_hidden') %>
        <div class="menu-group">
            <% if (message !== '') { %>
            <p class="error message text-danger panel-body bg-danger">
                <%= message %>
            </p>
            <% } %>
        </div>
        <div class="form-group form-inline">
            <label for="theater" class="col-sm-3 control-label label-title">
                劇場
            </label>
            <div class="col-sm-9">
                <select class="form-control" name="theater">
                    <option value="" selected disabled>選択してください</option>
                    <% for (const movieTheater of movieTheaters) { %>
                    <option value="<%= movieTheater.branchCode %>"><%= movieTheater.name.ja %></option>
                    <% } %>
                </select>
            </div>
        </div>
        <div class="form-group form-inline">
            <label for="startDateFrom" class="col-sm-3 control-label label-title">
                上映日
            </label>
            <div class="col-sm-9">
                <input type="text" class="form-control datepicker" name="startFrom" id="dateFrom" /> ～
                <input type="text" class="form-control datepicker" name="startThrough" id="modifiedThrough" />
            </div>
        </div>
        <div class="form-group form-inline">
            <label for="screeningEventSeries" class="col-sm-3 control-label label-title">
                上映作品
            </label>
            <div class="col-sm-9">
                <select class="form-control" name="screeningEventSeries">
                    <option value="" selected disabled>-----</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="panel-body">
                <a class="btn btn-ok search btn-primary"><span>検索する</span></a>
                <a class="reset-condition btn btn-danger"><span>検索内容リセット</span></a>
            </div>
        </div>
    </form>
</div>
<div class="col-sm-12 form-container search">
    <div>
        <p id="searchedCount" style="display:none;">
            検索結果$searched_count$件
        </p>
    </div>
    <div id="list" class="table-responsive" style="display:none;">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>上映日</th>
                    <th>上映開始時刻</th>
                    <th>上映作品</th>
                    <th>有料券数</th>
                    <th>前売券数</th>
                    <th>無料件数</th>
                    <th>入場数</th>
                    <!-- <th></th> -->
                </tr>
            </thead>
            <tbody>
                <tr id="templateRow" _id="$id$">
                    <td name="startDate">
                        $startDate$
                    </td>
                    <td name="startTime">
                        $startTime$
                    </td>
                    <td name="name.ja">
                        $name.ja$
                    </td>
                    <td name="saleTicketCount">
                        $saleTicketCount$
                    </td>
                    <td name="preSaleTicketCount">
                        $preSaleTicketCount$
                    </td>
                    <td name="freeTicketCount">
                        $freeTicketCount$
                    </td>
                    <td name=""></td>
                </tr>
            </tbody>
        </table>
    </div>
    <div id="pager" class="div_pager_parent"></div>
</div>
<%- include('../common/master/_loading') %>