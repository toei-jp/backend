<%- contentFor('title') %>
予約管理
<%- contentFor('displayId') %>
Aa-11
<%- contentFor('styles') %>
<link href="/css/simplePagination.css" rel="stylesheet">
<%- contentFor('scripts') %>
<script src="/js/jquery.simplePagination.js"></script>
<script src="/js/master/commonMaster.js"></script>
<script src="/js/master/commonMasterList.js"></script>
<script src="/js/master/reservationList.js"></script>
<%- contentFor('body') %>
<div class="col-sm-12 form-container search">
    <form method="post" class="form-horizontal">
        <%- include('../common/master/_hidden') %>
        <div class="menu-group">
            <% if (message !== '') { %>
                <p class="error message text-danger panel-body bg-danger">
                    <%= message %>
                </p>
                <% } %>
        </div>
        <div class="form-group form-inline">
            <label for="modifiedFrom" class="col-sm-3 control-label label-title">
                更新日
            </label>
            <div class="col-sm-9">
                <input type="text" class="form-control datepicker" name="modifiedFrom" id="dateFrom" />                                        ～
                <input type="text" class="form-control datepicker" name="modifiedThrough" id="modifiedThrough" />
            </div>
        </div>
        <div class="form-group">
            <div class="panel-body">
                <a class="btn btn-ok search btn-primary"><span>検索する</span></a>
                <a class="reset-condition btn btn-danger"><span>検索内容リセット</span></a>
            </div>
        </div>
    </form>
</div>
<div class="col-sm-12 form-container search">
    <div>
        <p id="searchedCount" style="display:none;">
            検索結果$searched_count$件
        </p>
    </div>
    <div id="list" class="table-responsive" style="display:none;">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID<br>予約番号<br>ステータス<br>更新日時</th>
                    <th>イベント</th>
                    <th>チケット</th>
                    <th>予約者</th>
                    <!-- <th></th> -->
                </tr>
            </thead>
            <tbody>
                <tr id="templateRow" _id="$id$">
                    <td name="id__reservationNumber__reservationStatus__modifiedTime">
                        $id$<br> $reservationNumber$
                        <br> $reservationStatus$
                        <br> $modifiedTime$
                    </td>
                    <td name="reservationFor.typeOf__reservationFor.id__reservationFor.name.ja__reservationFor.startDate__reservationFor.superEvent.location.name.ja__reservationFor.location.name.ja">
                        $reservationFor.typeOf$<br> $reservationFor.id$
                        <br> $reservationFor.name.ja$
                        <br> $reservationFor.startDate$
                        <br> $reservationFor.superEvent.location.name.ja$
                        <br> $reservationFor.location.name.ja$
                        <br>
                    </td>
                    <td name="reservedTicket.ticketType.name.ja__reservedTicket.ticketType.charge__reservedTicket.ticketedSeat.seatSection__reservedTicket.ticketedSeat.seatNumber">
                        $reservedTicket.ticketType.name.ja$<br> $reservedTicket.ticketType.charge$ JPY<br>                                            $reservedTicket.ticketedSeat.seatSection$
                        <br> $reservedTicket.ticketedSeat.seatNumber$
                    </td>
                    <td name="underName.typeOf__underName.name">
                        $underName.typeOf$<br> $underName.name$
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div id="pager" class="div_pager_parent"></div>
</div>
<%- include('../common/master/_loading') %>