<div class="form-group ">
    <label for="name[ja]" class="col-sm-3 control-label label-title">
        券種の種別
    </label>
    <div class="col-sm-9">
        <select class="form-control" name="category">
            <option value="" disabled selected>選択してください</option>
            <% for (let offerCategoryType of offerCategoryTypes) { %>
            <option value="<%= offerCategoryType.codeValue %>"
                <% if (forms.category === offerCategoryType.codeValue ) { %> selected <% } %>>
                <%= offerCategoryType.name.ja %>
            </option>
            <% } %>
        </select>
    </div>
</div>
<div class="form-group ">
    <label for="name[ja]" class="col-sm-3 control-label label-title">
        サイト表示用券種名<font color="red">＊</font>
    </label>
    <div class="col-sm-9">
        <input type="text" class="form-control" name="name[ja]" id="name[ja]" placeholder="" maxlength=64 value=<%=forms.name.ja
            %>>
        <p class="message">
            全角64文字以内でご入力ください。
        </p>
        <p class="error message text-danger">
            <% if (errors && errors['name.ja']) { %>
            <%- errors['name.ja'].msg %>
            <% } %>
        </p>
    </div>
</div>
