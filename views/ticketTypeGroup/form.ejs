    </label>
    <div class="col-sm-9">
        <input type="text" class="form-control" name="description[en]" id="description.en" placeholder="" maxlength=64
            value="<%= forms.description.en %>">
        <p class="message">
        </p>
        <p class="error message text-danger">
            <% if (errors && errors['description.en']) { %>
            <%- errors['description.en'].msg %>
            <% } %>
        </p>
    </div>
</div>
<div class="form-group ">
    <label for="boxOfficeType[id]" class="col-sm-3 control-label label-title">
        興行区分<font color="red">＊</font>
    </label>
    <div class="col-sm-9">
        <select name="boxOfficeType[id]" id="boxOfficeType[id]" class="form-control">
            <% for (let boxOffice of boxOfficeTypeList) { %>
            <% if (forms.boxOfficeType.id === boxOffice.id) { %>
            <option value="<%= boxOffice.id %>" selected>
                <%= boxOffice.name %>
            </option>
            <% } else if (boxOffice.name === '通常興行') { %>
            <option value="<%= boxOffice.id %>" selected>
                <%= boxOffice.name %>
            </option>
            <% } else { %>
            <option value="<%= boxOffice.id %>">
                <%= boxOffice.name %>
            </option>
            <% } %>
            <% } %>
        </select>
        <p class="error message text-danger">
            <% if (errors && errors['boxOfficeType.id']) { %>
            <%- errors['boxOfficeType.id'].msg %>
            <% } %>
        </p>
    </div>
</div>