<div class="form-group ">
    <label for="name[ja]" class="col-sm-3 control-label label-title">
        券種グループ名<font color="red">＊</font>
    </label>
    <div class="col-sm-9">
        <input type="text" class="form-control" name="name[ja]" id="name[ja]" placeholder="" maxlength=64 value="<%= forms.name.ja %>">
        <p class="message">
            全角64文字以内でご入力ください。
        </p>
        <p class="error message text-danger">
            <% if (errors && errors['name.ja']) { %>
            <%- errors['name.ja'].msg %>
            <% } %>
        </p>
    </div>
</div>
<div class="form-group ">
    <label for="name[en]" class="col-sm-3 control-label label-title">
        券種グループ名英<font color="red">＊</font>
    </label>
    <div class="col-sm-9">
        <input type="text" class="form-control" name="name[en]" id="name[en]" placeholder="" maxlength=64 value="<%= forms.name.en %>">
        <p class="message">
        </p>
        <p class="error message text-danger">
            <% if (errors && errors['name.en']) { %>
            <%- errors['name.en'].msg %>
            <% } %>
        </p>
    </div>
</div>
<div class="form-group ">
    <label for="ticketTypes" class="col-sm-3 control-label label-title">
        対象券種名<font color="red">＊</font>
    </label>
    <div class="col-sm-9"></div>
</div>
<div class="form-group ">
    <span for="price" class="col-sm-3  control-label label-title">
        券種発生価格
    </span>
    <div class="col-sm-9">
        <input type="number" class="form-control" name="price" id="price" placeholder="" maxlength=10>
        <p class="error message text-danger">
            <% if (errors && errors.ticketTypes) { %>
            <%- errors.ticketTypes.msg %>
            <% } %>
        </p>
    </div>
    <div class="col-sm-3 control-label label-title"></div>
    <div class="col-sm-9" id="price-list">
        <ul id="sortable1" class="connectedSortable">

        </ul>
        <ul id="sortable2" class="connectedSortable">
            <% ticketTypes.forEach((ticketType) => { %>
            <li class="ui-state-highlight" uid="<%= ticketType.id %>" appliesToMovieTicketType="<%= ticketType.priceSpecification.appliesToMovieTicketType %>"
                accountsReceivable="<%= ticketType.priceSpecification.accounting.accountsReceivable %>">
                <%= ticketType.name.ja %>
                <%= `(${ticketType.priceSpecification.price})` %>
                <%= (ticketType.priceSpecification.appliesToMovieTicketType !== '') ? `(${ticketType.priceSpecification.appliesToMovieTicketType})` : '' %>
            </li>
            <% }) %>
        </ul>
    </div>
</div>
<div class="form-group ">
    <label for="description.ja" class="col-sm-3 control-label label-title">
        補足説明
    </label>
    <div class="col-sm-9">
        <input type="text" class="form-control" name="description[ja]" id="description.ja" placeholder="" maxlength=64
            value="<%= forms.description.ja %>">
        <p class="message">
            全角64文字以内でご入力ください。
        </p>
        <p class="error message text-danger">
            <% if (errors && errors['description.ja']) { %>
            <%- errors['description.ja'].msg %>
            <% } %>
        </p>
    </div>
</div>
<div class="form-group ">
