<%- contentFor('title') %>
券種グループマスタ新規登録
<%- contentFor('displayId') %>
Aa-7
<%- contentFor('styles') %>
<link rel="stylesheet" href="/css/ticketTypeGroupAddEdit.css">
<%- contentFor('scripts') %>
<script src="/js/jquery-ui.js"></script>
<script src="/js/master/ticketTypeGroup/ticketTypeGroupAddEdit.js"></script>

<%- contentFor('body') %>
<div class="col-sm-12 form-container">
    <form method="post" class="form-horizontal" id="ticketTypeGroupsForm">
        <div class="menu-group">
            <%- include('../common/errorMessage') %>
            <%- include('../common/successMessage') %>
        </div>

        <div class="form-group ">
            <label for="id" class="col-sm-3 control-label label-title">
                券種グループコード<font color="red">＊</font>
            </label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="id" id="id" placeholder="" maxlength=64 value="<%= forms.id %>">
                <p class="message">
                    半角64文字以内でご入力ください。
                </p>
                <p class="error message text-danger">
                    <% if (errors && errors.id) { %>
                    <%- errors.id.msg %>
                    <% } %>
                </p>
            </div>
        </div>

        <%- include('form', { forms: forms }) %>

        <div class="form-group">
            <div class="btn-area panel-body">
                <a class="btn btn-ok btn-primary">登録する</a>
            </div>
        </div>
    </form>
</div>