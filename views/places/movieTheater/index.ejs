<%- contentFor('title') %>
劇場検索
<%- contentFor('displayId') %>
Aa-12
<%- contentFor('styles') %>
<link href="/css/simplePagination.css" rel="stylesheet">
<%- contentFor('scripts') %>
<script src="/js/jquery.simplePagination.js"></script>
<script src="/js/master/commonMaster.js"></script>
<script src="/js/master/commonMasterList.js"></script>
<script src="/js/master/places/movieTheaterList.js"></script>
<%- contentFor('body') %>
<div class="col-sm-12 form-container search">
    <form method="post" class="form-horizontal">
        <%- include('../../common/master/_hidden') %>
        <div class="menu-group">
        </div>
        <div class="form-group">
            <label for="name" class="col-sm-3 control-label label-title">
                名称
            </label>
            <div class="col-sm-9">
                <input class="form-control" name="name" id="name" placeholder="" maxlength=64>
            </div>
        </div>
        <div class="form-group">
            <div class="panel-body">
                <a class="btn btn-ok search btn-primary"><span>検索する</span></a>
                <a class="reset-condition btn btn-danger"><span>検索内容リセット</span></a>
            </div>
        </div>
    </form>
</div>
<div class="col-sm-12 form-container search">
    <div>
        <p id="searchedCount" style="display:none;">
            検索結果 $searched_count$件
        </p>
    </div>
    <div id="list" class="table-responsive" style="display:none;">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>コード</th>
                    <th>名称</th>
                    <th>属性</th>
                    <th>座席購入上限数</th>
                    <th>販売開始日</th>
                    <th>上映後販売終了時間</th>
                </tr>
            </thead>
            <tbody>
                <tr id="templateRow" identifier="$identifier$">
                    <td name="branchCode">$branchCode$</td>
                    <td name="name.ja__name.en__kanaName">
                        $name.ja$<br>
                        $name.en$<br>
                        $kanaName$<br>
                    </td>
                    <td name="telephone">
                        $telephone$
                    </td>
                    <td name="offers.eligibleQuantity.maxValue">$offers.eligibleQuantity.maxValue$枚</td>
                    <td name="availabilityStartsGraceTimeInDays">$availabilityStartsGraceTimeInDays$日前</td>
                    <td name="availabilityEndsGraceTimeInMinutes">$availabilityEndsGraceTimeInMinutes$</td>
                    <!-- <td name="edit" class="center">
                        <div class="btn-area">
                            <a class="btn btn-list edit" data-toggle="modal" data-target="#myModal">
                                <span>編集</span>
                            </a>
                        </div>
                    </td> -->
                </tr>
            </tbody>
        </table>
    </div>
    <div id="pager" class="div_pager_parent"></div>
</div>
<%- include('../../common/master/_loading') %>