<div class="form-group">
    <label for="videoFormat" class="col-sm-3 control-label label-title">
        上映形態<font color="red">＊</font>
    </label>
    <div class="col-sm-9">
        <%
            let screens = [
                {code: 'normal', name: {ja: '通常上映', en:'normal'}},
                {code: 'ATMOS', name: {ja: 'ATMOS', en:'ATMOS'}},
                {code: 'IMAX', name: {ja: 'IMAX', en:'IMAX'}},
                {code: 'MX4D', name: {ja: 'MX4D', en:'MX4D'}},
                {code: 'TCX', name: {ja: 'TCX', en:'TCX'}}
            ];
        %>
        <select name="videoFormat" id="videoFormat" class="form-control">
            <option value="">---</option>
            <% for (let screen of screens) { %>
                <% if (forms.videoFormat == '' || forms.videoFormat == undefined) { %>
                    <option value="<%= screen.code %>"<% if (screen.code === 'normal') { %> selected="selected"<% } %>><%- screen.name.ja %></option>
                <% } else { %>
                    <option value="<%= screen.code %>"<% if (forms.videoFormat === screen.code) { %> selected="selected"<% } %>><%- screen.name.ja %></option>
                <% } %>
            <% } %>
        </select>
        <p class="error message text-danger">
        <% if (errors && errors.videoFormat) { %>
        <%- errors.videoFormat.msg %>
        <% } %>
        </p>
    </div>
</div>
