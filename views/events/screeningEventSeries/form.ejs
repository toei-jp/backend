<div class="form-group">
    <label for="locationBranchCode" class="col-sm-3 control-label label-title">
        劇場<font color="red">＊</font>
    </label>
    <div class="col-sm-9">
        <select class="form-control" name="locationBranchCode">
            <option value="">選択してください</option>
            <% for (const movieTheater of movieTheaters) { %>
            <option value="<%= movieTheater.branchCode %>"<% if (forms.locationBranchCode === movieTheater.branchCode) { %> selected<% } %>><%= movieTheater.name.ja %></option>
            <% } %>
        </select>
    </div>
</div>
<div class="form-group">
    <label for="locationBranchCode" class="col-sm-3 control-label label-title">
        作品<font color="red">＊</font>
    </label>
    <div class="col-sm-9">
        <select class="form-control" name="movieIdentifier" id="movieIdentifier">
            <option value="">選択してください</option>
            <% for (const movie of movies) { %>
            <option value="<%= movie.identifier %>"<% if (forms.movieIdentifier === movie.identifier) { %> selected<% } %>><%= movie.name %></option>
